{
  "name": "x402-auto-pay-workspace",
  "private": true,
  "workspaces": ["pkgs/*"],
  "scripts": {
    "dev": "bun --cwd pkgs/mcp-server run dev",
    "start": "bun --cwd pkgs/mcp-server run start",
    "lint": "biome lint .",
    "format": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "mcp": "bun --cwd pkgs/mcp-server run dev"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15"
  }
}
